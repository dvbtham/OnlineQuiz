@model IEnumerable<OnlineQuiz.Model.Entity.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Examinee.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MajorClass.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDStudent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Examinee.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MajorClass.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDStudent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
