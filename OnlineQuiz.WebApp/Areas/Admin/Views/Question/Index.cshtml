@model IEnumerable<OnlineQuiz.Model.Entity.Question>
@{
    ViewBag.Title = "Quản lý câu hỏi";
    ViewBag.BoxTitle = "Danh sách câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 page-title">
    <h3 class="page-header">Quản lý câu hỏi</h3>
</div>

<div class="row">
    <div class="col-lg-12">
        @Html.Partial(OnlineQuiz.WebApp.Areas.Admin.Constants.StringHelpers.AlertPartial)
        <!-- Default box -->
        <div class="panel panel-default">
            <div class="panel-heading custom-panel-heading">

                <p class="mt-5 mb-5">
                    @ViewBag.BoxTitle
                    <a href="#" id="btnAdd" class="btn btn-flat btn-primary ml-10 btn-sm">Thêm</a>
                    <a href="#" id="btnImport" class="btn btn-flat btn-info ml-5 btn-sm">Nhập</a>
                    <a href="#" id="btnSaveImport" class="btn btn-flat btn-info ml-5 btn-sm hide">Lưu</a>
                    <a href="#" id="btnCancel" class="btn btn-flat btn-danger ml-5 btn-sm hide">Hủy</a>
                </p>

                @using (Html.BeginForm("Import", "Question", FormMethod.Post, new { id = "importForm", enctype = "multipart/form-data", @class = "mt-5" }))
                {

                    <input style="width: 300px; margin-top: 0px !important;" type="file"
                           id="importedQuestionFile"
                           name="importedQuestionFile"
                           class="form-control input-sm mt-10 mb-10 hide importedQuestionFile" />

                }

            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered font-12 dataTable">
                        <thead>
                            <tr>
                                <th>Nội dung câu hỏi</th>
                                <th class="module" width="60px">Mô đun</th>
                                <th class="level" width="60px">Cấp độ</th>
                                <th>Câu A</th>
                                <th>Câu B</th>
                                <th>Câu C</th>
                                <th>Câu D</th>
                                <th width="60px">Đáp án</th>
                                <th width="60px">Kết quả</th>
                                <th width="100px">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.ID">
                                    <td>
                                        <p class="text-show">@item.QuestionContent</p>
                                        <textarea style="width: 100% !important" rows="5" class="form-control questionContent editor hide">@item.QuestionContent</textarea>
                                    </td>
                                    <td class="module">
                                       @(item.QuestionModule == null ? "" : item.QuestionModule.Name)
                                    </td>
                                    <td class="level">
                                        @(item.QuestionClassification == null ? "" : item.QuestionClassification.Name)
                                    </td>
                                    <td>
                                        <p class="text-show">@item.AAnswer</p>
<textarea cols="6" rows="2" class="form-control aAnswer editor textarea-custom hide">@item.AAnswer</textarea>
                                    </td>
                                    <td>
                                        <p class="text-show">@item.BAnswer</p>
<textarea cols="6" rows="2" class="form-control editor bAnswer textarea-custom hide">@item.BAnswer</textarea>
                                    </td>
                                    <td>
                                        <p class="text-show">@item.CAnswer</p>
<textarea cols="6" rows="2" class="form-control editor cAnswer textarea-custom hide">@item.CAnswer</textarea>
                                    </td>
                                    <td>
                                        <p class="text-show">@item.DAnswer</p>
<textarea cols="6" rows="2" class="form-control editor dAnswer textarea-custom hide">@item.DAnswer</textarea>
                                    </td>
                                    <td>
                                        <p class="text-show">@item.Answer</p>
<textarea cols="6" rows="2" class="form-control editor answer textarea-custom hide">@item.Answer</textarea>
                                    </td>
                                    <td>
                                        <p class="text-show">@item.ResultAnswer</p>
<textarea cols="6" rows="2" class="form-control editor resultAnswer textarea-custom hide">@item.ResultAnswer</textarea>
                                    </td>
                                    <td>
                                        <a href="javascript:void(0)">
                                            <i class="fa fa-edit ml-10 edit-row"></i>
                                        </a>

                                        <a href="#">
                                            <i class="fa fa-save ml-10 text-success hide btn-save"></i>
                                        </a>

                                        <a href="#">
                                            <i class="fa fa-trash ml-10 text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
            <!-- /.box-footer-->
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/Admin/js/questionController.js"></script>
}